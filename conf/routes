# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# URL for a new session
GET     /newsession/:name                     controllers.Application.newSession(name: String)

# Page for volunteer to make edits.
GET     /volunteer/:id                  controllers.Application.editTranscript(id: Long)

# Page for speaker
GET     /speaker/:id                      controllers.Application.speaker(id: Long)

# Read-only view page
GET     /view/:id                       controllers.Application.viewTranscript(id: Long)

# API routes
GET     /api/stream/:id                 controllers.Application.getUtterances(id: Long)
GET     /api/transcript/:id             controllers.Application.getTranscriptData(id: Long)
POST    /api/add/:id                    controllers.Application.addUtterance(id: Long)
POST    /api/modify/:id                 controllers.Application.modifyOption(id: Long)
POST    /api/upvote/:id                 controllers.Application.upvoteOption(id: Long)
POST    /api/requesthelp/:id            controllers.Application.requestHelp(id: Long)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
